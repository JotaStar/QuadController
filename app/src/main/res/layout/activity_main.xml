<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <com.wootcomputing.jota.quadcontroller.JoystickView
            android:id="@+id/joystickLeft"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_alignParentLeft="true"/>

        <CheckBox
            android:id="@+id/joystickLeftFixYCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/joystickLeftFixXCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="30dp"/>

        <CheckBox
            android:id="@+id/joystickLeftFixCenterXCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:id="@+id/statusLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/yprLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/statusLayout"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/yawButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="12dp" />
            <Button
                android:id="@+id/pitchButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="12dp" />

            <Button
                android:id="@+id/rollButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/motorLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/yprLinearLayout"
            android:layout_alignEnd="@+id/joystickRight">

            <Button
                android:id="@+id/motorFLButton"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textSize="12dp" />

            <Button
                android:id="@+id/motorFRButton"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textSize="12dp" />

            <Button
                android:id="@+id/motorBLButton"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>

            <Button
                android:id="@+id/motorBRButton"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textSize="12dp" />

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:id="@+id/rcLinearLayout"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:layout_below="@+id/motorLinearLayout">-->

            <!--<Button-->
                <!--android:id="@+id/rcThroButton"-->
                <!--android:layout_width="55dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="12dp" />-->

            <!--<Button-->
                <!--android:id="@+id/rcYawButton"-->
                <!--android:layout_width="55dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="12dp" />-->

            <!--<Button-->
                <!--android:id="@+id/rcPitchButton"-->
                <!--android:layout_width="55dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="12dp"/>-->

            <!--<Button-->
                <!--android:id="@+id/rcRollButton"-->
                <!--android:layout_width="55dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="12dp" />-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/pidLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/motorLinearLayout">

            <TextView
                android:id="@+id/pidYawTextView"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="0.01"/>

            <TextView
                android:id="@+id/pidPitchTextView"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="0.01"/>

            <TextView
                android:id="@+id/pidRollTextView"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="0.01"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/pidLinearLayout"
            android:layout_alignEnd="@+id/joystickRight">

            <Button
                android:id="@+id/pidYawMoreButton"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:text="+"/>

            <Button
                android:id="@+id/pidYawLessButton"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:text="-"/>

            <Button
                android:id="@+id/pidPitchMoreButton"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:text="+"/>

            <Button
                android:id="@+id/pidPitchLessButton"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:text="-"/>

            <Button
                android:id="@+id/pidRollMoreButton"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:text="+"/>

            <Button
                android:id="@+id/pidRollLessButton"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:text="-"/>


        </LinearLayout>

        <com.wootcomputing.jota.quadcontroller.JoystickView
            android:id="@+id/joystickRight"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_alignParentRight="true"/>

        <CheckBox
            android:id="@+id/joystickRightFixXCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_alignRight="@+id/joystickRight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            android:layout_marginTop="210dp"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@+id/joystickRight"/>

        <CheckBox
            android:id="@+id/joystickRightFixYCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginRight="20dp"
            android:layout_alignRight="@+id/joystickRight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:layout_marginTop="210dp"
            android:layout_marginRight="30dp"
            android:layout_alignRight="@+id/joystickRight"/>

    </RelativeLayout>

</LinearLayout>
